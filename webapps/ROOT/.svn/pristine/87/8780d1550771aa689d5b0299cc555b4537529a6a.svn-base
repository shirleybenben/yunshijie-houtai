body{font-size: 14px;color:#414141;}
.require_spe label{font-size: 16px;}
.require_spe span{width:136px;height:28px;line-height:28px;}
.layout span.long{width:838px;margin-left:2px;height:100px;}
.butt_on {width:154px;margin: 28px 0 0 40px;}
.butt_on a:first-child{margin-bottom: 14px;}
.con_tent{border-bottom: 1px solid #e1e1e1;padding-bottom:30px;}
.bid_table{width:1158px;border:1px solid #e1e1e1;padding:0 20px 20px;margin:15px auto;}
.handle-data{line-height: 33px;}
table{border-collapse: collapse;margin-bottom:40px;}
th{background:#f6f6f6;height:40px;}
td{padding:20px 0;text-align: center;}
tr{border-top: 1px solid #dedede;background:#fff;}
tr:last-child{border-bottom: 1px solid #dedede;}
.owe-to>p{width:100px;padding-left:0;}
.owe-to .owe-span{top:0;left:12px;}
.owe-to .plat_handle{top:0;left:66px;}
.deadline li>b{margin-top:-5px;}
.bottom_info{width:100%;height:50px;position: relative;}
.bottom_con{width:1158px;height:35px;padding:15px 20px 0;background: #f6f6f6;position: absolute;top:0;left:-20px;}
.bottom_con a{font-size: 14px;color: #fff;height: 26px;line-height: 26px;padding: 0 26px;border: 1px solid #bc5120;background-color: #de642c;border-radius: 2px;}
